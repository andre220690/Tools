# XML project files
[*.{csproj,vbproj,vcxproj,vcxproj.filters,proj,projitems,shproj}]
indent_size = 2

# XML config files
[*.{props,targets,ruleset,config,nuspec,resx,vsixmanifest,vsct}]
indent_size = 2

# Code files
[*.{cs,csx,vb,vbx}]
indent_style = tab

# Organize usings
[*.{cs,vb}]
dotnet_sort_system_directives_first = true

# Message rules
[*.{cs,vb}]
dotnet_diagnostic.IDE0037.severity = none
dotnet_diagnostic.CA2254.severity = none # Шаблон сообщения о ведении журнала не должен изменяться между вызовами
